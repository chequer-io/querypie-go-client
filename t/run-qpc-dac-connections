#!/usr/bin/env bash
set -o nounset -o errexit -o errtrace -o pipefail

SCRIPT_DIR=$(dirname "${BASH_SOURCE[0]}")

# shellcheck source=../../../scripts/lib/bash-tap
source "${SCRIPT_DIR}"/../../../scripts/lib/bash-tap
TODO= # Define here to prevent unbound variable error from bash-tap.

function compare_qpc_dac_connections_fetch_and_qpc_dac_connections() {
  echo "# ##########"
  echo "# compare_qpc_dac_connections_fetch_and_qpc_dac_connections"
  echo "# "
  qpc dac connections --fetch >/tmp/qpc_dac_connections_fetch.$$ 2>&1
  qpc dac connections >/tmp/qpc_dac_connections.$$ 2>&1
  if diff /tmp/qpc_dac_connections_fetch.$$ /tmp/qpc_dac_connections.$$ |
    sed 's/^/# /'; then
    ok 1 "qpc dac connections --fetch and qpc dac connections are the same."
  else
    ok 0 "qpc dac connections --fetch and qpc dac connections are different."
  fi
  # Clean up temporary files
  rm -f /tmp/qpc_dac_connections_fetch.$$ /tmp/qpc_dac_connections.$$
}

function main() {
  local num_of_tests=4
  plan tests ${num_of_tests}

  local top_dir basename
  top_dir=$(realpath "${SCRIPT_DIR}"/../)
  ok 1 "Detected top_dir=${top_dir}"

  basename=$(basename "${top_dir}")
  ok 1 "Detected basename=${basename}"

  pushd "${top_dir}" &>/dev/null
  is "$(pwd)" "${top_dir}" "I just changed the current working directory to ${top_dir}."

  export PATH=.:${PATH}
  compare_qpc_dac_connections_fetch_and_qpc_dac_connections

  popd &>/dev/null

  done_testing ${num_of_tests}
}

main "$@"
